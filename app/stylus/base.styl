html
    box-sizing border-box
    font-size: 14px
*, *:before, *:after
    box-sizing inherit

body
    color $gray
    font-size 1rem
    font-family 'Fira Sans', sans-serif
    line-height: 1.5
    font-weight 400
        
a
    text-decoration underline
    color inherit
    transition all 0.3s
    &:hover
        text-decoration none

img
    max-width 100%

.page-wrapper
    overflow: hidden
    position: relative
    padding-top: 80px

.container
    padding 0 10px
    max-width: 1170px
    margin: 0 auto

    +above($screen-sm)
        padding: 0 15px

.animated
    animation-fill-mode both

.btn
    font-family: 'Dark'
    text-transform: uppercase
    display: inline-block
    background-color: transparent
    text-decoration: none
    padding 0 20px
    font-size 1.143rem
    color $red
    border 1px solid $red
    position: relative
    text-align: center
    overflow: hidden
    -webkit-transition: border-color 0.3s, background-color 0.3s
    transition: border-color 0.3s, background-color 0.3s
    -webkit-transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1)
    transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1)
    &--long
        width: 170px
    &:hover, &.js-active
        background-color: $red
        &:before
            opacity: 1;
            -webkit-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
        > span
            opacity: 0;
            -webkit-transform: translate3d(0, -25%, 0);
            transform: translate3d(0, -25%, 0);
    > span
        display: block
        text-align: center
        height: 40px
        line-height: 40px
        width: 100%
    &:before
        content attr(data-text)
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 40px
        color white
        z-index: 10
        line-height: 40px
        opacity: 0;
        -webkit-transform: translate3d(0, 25%, 0);
        transform: translate3d(0, 25%, 0);
    &:before, > span
        -webkit-transition: -webkit-transform 0.3s, opacity 0.3s
        transition: transform 0.3s, opacity 0.3s
        -webkit-transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1)
        transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1)

.red-link
    text-decoration: none
    color $red

.input
    margin 30px 0
    position: relative
    &__placeholder
        position: absolute
        height: 40px
        line-height: 42px
        left 14px
        transition all 0.2s
        &.js-active
            font-size: 0.8rem
            transform translateY(-32px) translateX(-13px)
    &__control
        height: 40px
        border 1px solid $gray-light
        width: 100%
        padding 0 14px
        &:focus
            outline 1px solid gray
        &--textarea
            resize none
            padding-top: 10px
            height: 150px
            +above($screen-sm)
                height: 200px

.square-winona
    transition all 0.3s
    -webkit-transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1)
    transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1)
    display: block
    path
        -webkit-transition: -webkit-transform 0.3s, opacity 0.3s
        transition: transform 0.3s, opacity 0.3s
        -webkit-transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1)
        transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1)
    .path-symbol-hover
        opacity: 0
        -webkit-transform: translate3d(0, 80%, 0);
        transform: translate3d(0, 80%, 0);
    &:hover
        background-color: $red
        .path-symbol-hover
            transform none
            opacity: 1
        .path-symbol
            -webkit-transform: translate3d(0, -80%, 0);
            transform: translate3d(0, -80%, 0);
    &--black
        &:hover
            background-color: #4a4949