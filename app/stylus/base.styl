html
    box-sizing border-box
    font-size: 14px
*, *:before, *:after
    box-sizing inherit

body
    color black
    font-size 1rem
    font-family 'FireSans', sans-serif
    font-weight 400
        
a
    text-decoration underline
    color inherit
    transition all 0.3s
    &:hover
        color black
        text-decoration none

.icon
    display inline-block
    vertical-align middle
    position relative
    background-color: transparent
    padding: 0
    border none
    &:before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        display block
        opacity: 0
        transition all 0.3s
    &:after
        content ''
        top 0
        left 0
        position: absolute
        opacity: 1
        transition all 0.3s
    + span
        display inline-block
        vertical-align middle

img
    max-width 100%
        
.container
    padding 0 10px
    max-width: 1170px
    margin: 0 auto
    +above($screen-sm)
        padding: 0 15px


.field
    height: 40px
    display: block
    width: 100%
    padding-left: 20px
    padding-right: 20px
    margin: 0 auto
    background-color: #fdfcfc
    border: 1px solid #dfdfdf
    &-text
        resize none
        height: 100px
        padding-top: 10px
    &:focus
        border-color: gray
        outline none

.fadeInUp
    animation fadeInUp

.animated
    animation-fill-mode both