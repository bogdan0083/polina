// footer

.footer
	border-top: 1px solid $gray-light
	text-align: center
	.copyright
		text-align: center
		width: 240px
		margin 10px 0
		+above($screen-sm)
			position: relative
			left 44px
			width: auto
	.container
		display: flex
		justify-content space-between
		flex-flow column
		align-items center
		align-content center
		min-height: 80px
		padding-top: 10px
		padding-bottom: 10px
		flex-wrap wrap
		+above($screen-sm)
			flex-flow row
.social-link
	display: inline-block
	vertical-align: middle
	text-decoration: none
	&--fb
		margin-right: 18px