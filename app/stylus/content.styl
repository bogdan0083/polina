.heading
	text-align: center
	text-transform: uppercase
	font-family: 'Dark', 'Fira Sans', sans-serif
	font-weight: 400
	&--red
		color $red

// intro

.intro
	text-align: center
	padding 30px 0
	+above($screen-sm)
		padding 50px 0 70px
	&__in
		max-width: 828px
		margin: 0 auto
	&__image
		position: relative
		left -10px
	p
		line-height: 2

// lifetime

.lifetime
	display flex
	flex-direction column
	+above($screen-sm)
		flex-direction row
		justify-content  space-around
	&__col
		margin 20px 0
	&__icon
		vertical-align: middle
		float: left
		width: 25%
		text-align: center
		+above($screen-sm)
			display: inline-block
			margin 8px 14px
			float: none
			width: auto

// portfolio

.portfolio
	border-top: 1px solid #e6e6e6
	position: relative
	z-index: 4
	&-sort
		text-align: center
		background-color: #fff
		ul
			padding: 0
			margin: 0
			list-style none
		li
			position: relative
			display: inline-block
		&__link
			display: inline-block
			margin 16px 16px 15px
			text-decoration: none
			transition all 0.3s
			&:hover
				color $red

// portfolio-item

.portfolio-item
	position: relative
	display: block
	//float: left
	width: 50%
	img
		width: 100%
		display: block
	+above($screen-sm)
		width: 25%
	+above($screen-md)
		width: 20%
	&:hover
		.portfolio-item__name
			opacity: 1
	&__name
		position: absolute
		left: 0
		top: 0
		width: 100%
		height: 100%
		background-color: rgba($red, .9)
		display: flex
		align-items center
		text-align: center
		font-size 1.143rem
		transition all 0.3s
		opacity: 0
		span
			width: 100%
			color white

// contact

.contact
	padding 50px 0
	text-align: center
	&__in
		max-width: 820px
		margin: 0 auto
	p
		line-height: 2

// contact-form

.contact-form
	max-width: 430px
	margin: 0 auto

.up
	padding: 0
	border none
	background-color: transparent
